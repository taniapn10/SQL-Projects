SELECT * FROM dbo.books

/*My all time favorite book from the list*/ 
SELECT *
FROM dbo.books
WHERE Book_ID = 1 ;

/*List books by latest edition to oldest edition*/
SELECT Book_Name, Edition
FROM dbo.books
ORDER BY Edition DESC;
