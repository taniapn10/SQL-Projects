--Here I am creating a table for my favorite books. I used Azure Studio to run my data--

DROP TABLE IF EXISTS books

-- Create Books table-- 
CREATE TABLE books ( 
     Book_ID     INT NOT NULL,
     Book_Name VARCHAR(85), 
     Publisher  VARCHAR(80), 
     Author     VARCHAR(40),  
     Edition        CHAR(15), 
     Price     CHAR(15), 
     ISBN        CHAR(15), 
     PRIMARY KEY (Book_ID) 
  );


--Insert into Books table--
